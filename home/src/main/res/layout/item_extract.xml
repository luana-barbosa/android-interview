<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <View
        android:id="@+id/view_extract_widget"
        android:layout_width="357dp"
        android:layout_height="169dp"
        android:layout_marginStart="21dp"
        android:layout_marginEnd="21dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.473"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.642" />

    <TextView
        android:id="@+id/extract_title_widget"
        android:layout_width="wrap_content"
        android:layout_height="24dp"
        android:layout_marginTop="28dp"
        android:text="Meu saldo"
        android:textSize="20sp"
        android:fontFamily="sans-serif-condensed-medium"
        android:textColor="@color/black"
        app:layout_constraintEnd_toEndOf="@+id/view_extract_widget"
        app:layout_constraintHorizontal_bias="0.174"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/view_extract_widget" />

    <TextView
        android:id="@+id/title_balance_widget"
        android:layout_width="wrap_content"
        android:layout_height="27dp"
        android:text="Saldo disponivel"
        android:fontFamily="sans-serif-condensed-medium"
        android:textColor="@color/black"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/button_extract"
        app:layout_constraintEnd_toEndOf="@+id/view_extract_widget"
        app:layout_constraintHorizontal_bias="0.104"
        app:layout_constraintStart_toStartOf="@+id/view_extract_widget"
        app:layout_constraintTop_toBottomOf="@+id/extract_title_widget"
        app:layout_constraintVertical_bias="0.271" />

    <Button
        android:id="@+id/button_extract"
        android:layout_width="178dp"
        android:layout_height="42dp"
        android:fontFamily="sans-serif-condensed-medium"
        android:textColor="@color/black"
        android:backgroundTint="@color/red"
        android:text="@string/extract_button"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="@+id/view_extract_widget"
        app:layout_constraintEnd_toEndOf="@+id/view_extract_widget"
        app:layout_constraintStart_toStartOf="@+id/view_extract_widget"
        app:layout_constraintTop_toTopOf="@+id/view_extract_widget"
        app:layout_constraintVertical_bias="0.904" />

</androidx.constraintlayout.widget.ConstraintLayout>